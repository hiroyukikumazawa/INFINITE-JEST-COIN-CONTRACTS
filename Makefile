include .env

deploy-base:
	@forge create src/InfiniteJestCoin.sol:InfiniteJestCoin --constructor-args "Infinite Jest Coin" "IJC" 18 1000000000000000000000000000 --rpc-url https://base-rpc.publicnode.com --private-key ${PRIVATE_KEY}

create-pair-base:
	@forge script script/CreatePair.s.sol --rpc-url https://base-rpc.publicnode.com --broadcast 

verify:
	@forge verify-contract 0xA12Ab711be1057138779F99c1180f8082Da9dAb0 InfiniteJestCoin --constructor-args  --etherscan-api-key XN98SU78YA9YIZVYPGCT28GUDPAE6IFCMT --chain-id 8453
